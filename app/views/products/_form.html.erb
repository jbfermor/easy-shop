<div class="container mt-2">
  <div class="row">
      <%= form_with(model: product) do |form| %>
        <% if product.errors.any? %>
          <div style="color: red">
            <h2><%= pluralize(product.errors.count, "error") %> prohibited this supplier from being saved:</h2>

            <ul>
              <% product.errors.each do |error| %>
                <li><%= error.full_message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="row mt-2">
          <%= form.label :name, class: "form-label" %>
          <%= form.text_field :name, class: "form-control" %>
        </div>

        <div class="row mt-2">
          <%= form.label :description, class: "form-label" %>
          <%= form.text_area :description, size: "50x5" %>
        </div>

        <div class="row mt-2">
          <%= form.label :price, class: "form-label" %>
          <%= form.text_field :price, class: "form-control" %>
        </div>

        <div class="row mt-2">
          <%= form.label :stock, class: "form-label" %>
          <%= form.text_field :stock, class: "form-control" %>
        </div>

        <div class="row mt-2">
          <div class="form-check form-switch">
            <%= form.check_box :active, { class: "form-check-input" } %>
            <label class="form-check-label" for="productIsActive">Activo</label>
          </div>
        </div>

        <div class="row mt-2">
          <%= form.label "Proveedor", class: "form-label" %>
          <%= form.collection_select :supplier_id, @suppliers, :id, :name, {}, class: "form-select" %>
        </div>

        <div class="row mt-2"> 
            <%= form.submit "Guardar", class: "btn btn-success" %>
        </div>
      <% end %>
    </div>
</div>

