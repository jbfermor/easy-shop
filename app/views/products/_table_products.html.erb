<div class="container mt-2">
  <%= link_to "Nuevo producto", new_product_path, class: "btn btn-primary mt-3" %>
  <table class="mt-3">
    <thead>
      <tr>
        <th>Nombre</th>
        <th>Precio</th>
        <th>Stock</th>
        <th>Estado</th>
        <th>Proveedor</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @products.each do |product|%>
        <tr>
          <td><%= product.name %></td>
          <td><%= product.price %></td>
          <td><%= product.stock %></td>
          <td><%= product_active?(product) %></td>
          <td><%= Supplier.find(product.supplier_id).name %></td>
          <td>
            <%= link_to 'Ver', product_path(product), class: 'btn btn-sm btn-info' %>
            <%= link_to 'Editar', edit_product_path(product), class: 'btn btn-sm btn-warning' %>
            <%= link_to 'Eliminar', product_path(product), method: :delete, class: 'btn btn-sm btn-danger' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

